<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.MainActivity">

    <!-- LinearLayout der App -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/main_sceen_main_layout_padding"
        >
        <!-- Hauptbild der App -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_screen_image_height"
            android:scaleType="fitXY"
            android:contentDescription="@string/image"
            android:src="@drawable/hintergrundsfoto" />
    </LinearLayout>
    <!-- Erstellung der Button -->
    <LinearLayout
        android:id="@+id/idStarten"
        android:layout_width="@dimen/start_button_size"
        android:layout_height="@dimen/start_button_size"
        android:layout_marginTop="520dp"
        android:layout_marginHorizontal="120dp"
        android:gravity="center"
        android:background="@drawable/item_colour_accent_border_ripple_hintergrund">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_starten"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/start_button_label_textsize"/>
    </LinearLayout>


</RelativeLayout>